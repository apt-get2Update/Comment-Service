{
  "name": "comment-service",
  "version": "0.1.0",
  "description": "Comment-service",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Thirumurugan",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts  && npm run copy-static-assets",
    "production": "node dist/models/migrate.js && forever -c \"node --max_old_space_size=8192\" dist/server.js",
    "serve": "node dist/models/migrate.js && nodemon --delay 1 dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "node dist/models/migrate.js && jest --forceExit test/index.ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "ecs-deploy": "travis-ecs-deploy"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/umzug": "^2.1.0",
    "async": "^2.1.2",
    "axios": "^0.17.1",
    "axios-cache-adapter": "^2.0.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cors": "^2.8.4",
    "csvtojson": "^1.1.9",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-flash": "^0.0.2",
    "express-session": "^1.14.2",
    "express-validator": "^3.1.3",
    "lodash": "^4.17.4",
    "neo4j-driver": "^1.7.6",
    "node-json-transform": "^1.0.16",
    "morgan": "^1.7.0",
    "pg": "6.4.1",
    "pg-hstore": "^2.3.2",
    "reflect-metadata": "^0.1.10",
    "sequelize": "^4.3.2",
    "sequelize-typescript": "^0.3.5",
    "turndown": "^4.0.1",
    "umzug": "^2.1.0",
    "uuid": "^3.1.0",
    "when": "^3.7.8"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/bluebird": "^3.5.8",
    "@types/body-parser": "^1.16.2",
    "@types/compression": "0.0.33",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "0.0.32",
    "@types/jest": "^19.2.2",
    "@types/lodash": "^4.14.63",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.12",
    "@types/nodemailer": "^1.3.32",
    "@types/passport": "^0.3.3",
    "@types/request": "0.0.45",
    "@types/supertest": "^2.0.0",
    "concurrently": "^3.4.0",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "shelljs": "^0.8.5",
    "supertest": "^2.0.1",
    "ts-jest": "^19.0.8",
    "tslint": "^5.0.0",
    "typescript": "^2.4.0"
  }
}
